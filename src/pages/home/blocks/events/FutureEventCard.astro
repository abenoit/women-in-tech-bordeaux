---
import Button from "../../../../components/Button.astro";
import EventDateAndPlace from "../../../../components/EventDateAndPlace.astro";

interface Props {
  label: string;
  link?: string;
  place?: string;
  date: Date;
}

const { label, link, date, place } = Astro.props;
---

<div
  class="flex flex-col rounded-t-sm bg-mediumPurple p-5 text-white shadow-lg"
>
  <span class="text-md">PROCHAIN ÉVÈNEMENT</span>
  <span class="text-lg font-bold">
    {label}
  </span>
</div>

<div
  class="flex flex-col items-start justify-between gap-4 rounded-b-sm bg-white p-5 lg:flex-row lg:items-center"
>
  <EventDateAndPlace {date} {place} />
  {link && <Button label="S'inscrire" {link} external />}
</div>
