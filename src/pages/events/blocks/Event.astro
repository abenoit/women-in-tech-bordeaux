---
import type { CollectionEntry } from "astro:content";
import { getEntry } from "astro:content";
import EventDateAndPlace from "../../../components/EventDateAndPlace.astro";

interface Props {
  id: CollectionEntry<"events">["slug"];
}

const { id } = Astro.props;
const entry = await getEntry("events", id);

if (!entry) {
  throw new Error(`Event with slug ${id} not found`);
}
const { title, date, platform, link, place } = entry.data;
---

<div>
  <h2 class="mb-5 text-mmd font-bold">{title}</h2>
  <div
    class="bg-subtlePurple flex flex-col items-start justify-between gap-4 rounded-sm p-5 lg:flex-row lg:items-center"
  >
    <EventDateAndPlace {date} {place} colored />
  </div>
  {place}
  {date}
</div>
