---
import type { HTMLTag } from "astro/types";

interface Props {
  as?: HTMLTag;
  label: string;
  light?: boolean;
  center?: boolean;
  darkPink?: boolean;
}

const { as, center, label, light = true, darkPink } = Astro.props;

const Component = as || "h1";
---

<div>
  <Component
    class:list={[
      "font-bold text-black",
      { "text-white": light },
      { "text-center": center },
    ]}>{label}</Component
  >
  <div
    class:list={[
      "w-28 h-1 mb-3 mt-3",
      {
        "mx-auto": center,
      },
      { "bg-pink1": !darkPink },
      { "bg-pink2": darkPink },
    ]}
  >
  </div>
</div>
