---
import Title from "../../common/Title.astro";
import Layout from "../../../layouts/Layout.astro";
import Organizer from "./Organizer.astro";
import { getCollection } from "astro:content";

const organizers = await getCollection("organizers");
---

<Layout
  noPadding
  class="flex flex-col gap-7 bg-lightYellow pb-6 pt-9"
  id="organizers"
>
  <Title
    label="Organisatrices"
    center
    light={false}
    separatorColor="dark-pink"
  />
  <div
    class="flex flex-col items-center justify-center gap-8 md:flex-row md:items-start"
  >
    {organizers.map(({ slug }) => <Organizer id={slug} />)}
  </div>
</Layout>
