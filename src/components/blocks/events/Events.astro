---
import EventCard from "./EventCard.astro";
import Title from "../../common/Title.astro";
import Layout from "../../../layouts/Layout.astro";
---

<Layout>
  <div class="absolute inset-0 w-full -z-10 bg-mainPurple h-[60%] -mt-1"></div>
  <Title label="Nos évènement" />
  <div class="flex flex-col lg:flex-row gap-4">
    <EventCard
      label="Atelier : Débloquez des idées captivantes pour vos conférences !"
      link="https://www.meetup.com/fr-FR/women-in-tech-bordeaux/events/304634357/?eventorigin=group_upcoming_events"
      future
    />
    <EventCard
      label="La douceur est-elle un avantage ? / Offboarding"
      link="https://www.meetup.com/fr-FR/women-in-tech-bordeaux/events/301337329/?eventorigin=group_past_events"
    />
    <EventCard
      label="Part of your world 🧜🏾 ou les abysses de la tech."
      link="https://www.meetup.com/fr-FR/women-in-tech-bordeaux/events/300028090/?eventorigin=group_events_list"
    />
  </div>
</Layout>

<style>
  .background {
    background: linear-gradient(to left, #ff0000 50%, #0000ff 50%);
  }
</style>
