---
import type { CollectionEntry } from "astro:content";
import Link from "../../common/Link.astro";

interface Props {
  label: string;
  link: string;
  platform: CollectionEntry<"events">["data"]["platform"];
}

const { label, link, platform } = Astro.props;
---

<div class="flex h-full flex-1 flex-col justify-between rounded-sm bg-white">
  <div class="flex flex-col py-5.5 pl-6 pr-5.5 lg:p-5">
    <span class="text-md text-subtitlePurple">ÉVÈNEMENT PASSÉ</span>
    <span class="text-lg font-bold">
      {label}
    </span>
  </div>

  <div class="flex items-center justify-end pb-7 pr-5.5 lg:px-5 lg:pb-5">
    <Link
      label={`Consulter sur ${platform}`}
      {link}
      external
      class="font-semibold"
    />
  </div>
</div>
