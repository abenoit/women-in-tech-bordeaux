---
import Link from "../../common/Link.astro";

interface Props {
  label: string;
  link: string;
}

const { label, link } = Astro.props;
---

<div class="bg-white rounded-sm flex-1 flex flex-col justify-between">
  <div class="flex flex-col p-5">
    <span class="text-md text-subtitlePurple">ÉVÈNEMENT PASSÉ</span>
    <span class="font-bold text-lg">
      {label}
    </span>
  </div>

  <div class="flex items-center justify-end pb-5 px-5">
    <Link
      label="Consulter sur Meetup"
      link={link}
      external
      class="font-semibold"
    />
  </div>
</div>
