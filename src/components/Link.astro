---
interface Props {
  label: string;
  link: string;
  external?: boolean;
  class?: string;
}

const { label, link, external = false, class: className } = Astro.props;
---

<a
  href={link}
  {...external && { target: "_blank", rel: "noopener noreferrer" }}
  class:list={["text-mediumPurple underline hover:cursor-pointer hover:text-buttonHover active:text-buttonPressed", className]}
  >{label}</a
>
