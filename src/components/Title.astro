---
import type { HTMLTag } from "astro/types";

interface Props {
  as?: HTMLTag;
  center?: boolean;
  color?: "pink" | "white" | "black";
  label: string;
  separatorColor: "light-pink" | "dark-pink" | "purple" | "grey";
}

const { as, center, label, separatorColor, color = "black" } = Astro.props;

const Component = as || "h1";
---

<div>
  <Component
    class:list={[
      `text-xxl font-bold leading-10`,
      {
        "text-center": center,
        "text-darkPink": color === "pink",
        "text-white": color === "white",
        "text-black": color === "black",
      },
    ]}>{label}</Component
  >
  <div
    class:list={[
      "mb-3 mt-4 h-1 w-28",
      {
        "mx-auto": center,
      },
      { "bg-titleSeparatorPink": separatorColor === "light-pink" },
      { "bg-mediumGrey": separatorColor === "grey" },
      { "bg-pink2": separatorColor === "dark-pink" },
      { "bg-secondaryTitlePurle": separatorColor === "purple" },
    ]}
  >
  </div>
</div>
